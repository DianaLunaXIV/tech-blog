<form class="post-form">
    <h3>Create New Thread</h3><hr>
        <div class="create-post-title">
            <label for="post-title">Title:</label><br/>
            <input type="text" id="post-title" name="post-title" placeholder="post title here"/>
        </div>
        <div class="create-post-content">
            <label for="post-content">Content:</label></br>
            <textarea type="text" id="post-content" name="post-content" placeholder="post content here"></textarea>
        </div>
        
        <button class="create-post-btn">Create Post</button>
        <div id="msg">
            <pre></pre>
        </div>
</form>
<script src="/js/createPost.js"></script>